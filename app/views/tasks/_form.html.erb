<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["",""],["未完了","未完了"],["完了","完了"]] %>

  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>

  <%= f.submit '作成/更新' %>
<% end %>